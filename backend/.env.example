
#–––––––––––––––––––––––––––––––––––––––––––
# CORE APPLICATION CONFIGURATION
#–––––––––––––––––––––––––––––––––––––––––––
NODE_ENV=development
PORT=5000

#–––––––––––––––––––––––––––––––––––––––––––
# SECURITY & AUTHENTICATION
#–––––––––––––––––––––––––––––––––––––––––––
# Use a long, random string for JWT_SECRET (e.g., from https://www.grc.com/passwords.htm)
JWT_SECRET=your_super_secret_jwt_key_that_is_at_least_32_chars_long
JWT_EXPIRES_IN=30d

#–––––––––––––––––––––––––––––––––––––––––––
# DATABASE (PostgreSQL)
#–––––––––––––––––––––––––––––––––––––––––––
DB_CLIENT=pg
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=fin_agentix_db

#–––––––––––––––––––––––––––––––––––––––––––
# AWS CREDENTIALS (for S3, Bedrock, etc.)
#–––––––––––––––––––––––––––––––––––––––––––
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region # e.g., us-east-1
AWS_S3_BUCKET_NAME=your_s3_bucket_name

#–––––––––––––––––––––––––––––––––––––––––––
# COMMUNICATION SERVICES
#–––––––––––––––––––––––––––––––––––––––––––
# Twilio for SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Nodemailer for Email (using a service like SendGrid, Mailgun, or AWS SES)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email_username
EMAIL_PASSWORD=your_email_password
EMAIL_FROM="Fin-Agentix" <noreply@fin-agentix.com>

#–––––––––––––––––––––––––––––––––––––––––––
# CREDIT BUREAU APIs
#–––––––––––––––––––––––––––––––––––––––––––
# Note: Base URLs are examples and must be confirmed from official API docs.
CIBIL_API_BASE_URL=https://api.cibil.com/v2
CIBIL_API_KEY=your_cibil_api_key
CIBIL_API_SECRET=your_cibil_api_secret

EXPERIAN_API_BASE_URL=https://api.in.experian.com/v1
EXPERIAN_API_CLIENT_ID=your_experian_client_id
EXPERIAN_API_CLIENT_SECRET=your_experian_client_secret

CRIF_API_BASE_URL=https://api.crifhighmark.co.in/v1
CRIF_API_USERNAME=your_crif_api_username
CRIF_API_PASSWORD=your_crif_api_password

EQUIFAX_API_BASE_URL=https://api.equifax.co.in/v1
EQUIFAX_API_MEMBER_ID=your_equifax_member_id
EQUIFAX_API_CLIENT_KEY=your_equifax_client_key
EQUIFAX_API_CLIENT_SECRET=your_equifax_client_secret

#–––––––––––––––––––––––––––––––––––––––––––
# GOVERNMENT & VERIFICATION APIs
#–––––––––––––––––––––––––––––––––––––––––––
# PAN Service API (e.g., NSDL or a third-party aggregator)
PAN_API_BASE_URL=https://api.verifications.com/v1/pan
PAN_API_KEY=your_pan_verification_api_key

# Aadhaar Service API (Third-party aggregator - direct UIDAI access is restricted)
# Real Aadhaar APIs are complex (e-KYC XML, etc.) and not a simple REST call.
AADHAAR_API_BASE_URL=https://api.verifications.com/v1/aadhaar
AADHAAR_API_KEY=your_aadhaar_verification_api_key

# Digilocker API (OAuth 2.0 Flow)
DIGILOCKER_API_BASE_URL=https://api.digilocker.gov.in/v1
DIGILOCKER_CLIENT_ID=your_digilocker_client_id
DIGILOCKER_CLIENT_SECRET=your_digilocker_client_secret

# GST Profile Verification API
GST_API_BASE_URL=https://api.verifications.com/v1/gst
GST_API_KEY=your_gst_verification_api_key

# ITR Filing Verification API
ITR_API_BASE_URL=https://api.verifications.com/v1/itr
ITR_API_KEY=your_itr_verification_api_key

# EPFO Verification API
EPFO_API_BASE_URL=https://api.verifications.com/v1/epfo
EPFO_API_KEY=your_epfo_verification_api_key

# RERA Project Verification API
RERA_API_BASE_URL=https://api.verifications.com/v1/rera
RERA_API_KEY=your_rera_verification_api_key

# RTO Vehicle Verification API
RTO_API_BASE_URL=https://api.verifications.com/v1/rto
RTO_API_KEY=your_rto_verification_api_key
